<%= turbo_stream_from :rooms %>
<p style="color: green"><%= notice %></p>

<%#= turbo_frame_tag :rooms do %>
  <%#= render @rooms %>
<%# end %>

<br/>
<div class="container .text-primary">
  <h1 class="text-primary">Rooms</h1>
</div>
<div class="container">
  <table class="table table-hover" style="width: 700px">
    <thead>
    <tr>
      <th class="block" style="width:70%"><%= :name %></th>
      <th class="block" style="width:10%"></th>
    </tr>
    </thead>
    <tbody>
    <% @rooms.each do |room| %>
        <tr class="text-success fw-bold">
          <td><%= link_to room.name, room_path(room) %></td>
          <td></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<%= link_to "New room", new_room_path %>
